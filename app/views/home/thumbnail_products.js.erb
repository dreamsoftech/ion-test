<script type="text/javascript">
  var url = "http://uploading-test.herokuapp.com/"; 
  // var url = "http://localhost:3000"; 
  setInterval(function(){
    $.getJSON(url + "/products",function(result){
    	$("#product-thumbnails").html("");
    	var thumbnails = $("<ul class='thumbnails'></ul>");
    	thumbnails.css("display", "none");
      $.each(result, function(i, field){
      	console.log(field);
    		var template = $("#template").clone();
    		template.removeClass("hidden");
      	template.find("#modal-link").attr("href", url + "/products/" + field[0]);
      	template.find("img#product-img").attr("src", field[1]);
      	template.attr("id", "");
      	thumbnails.append(template);
      });
      thumbnails.appendTo("#product-thumbnails").fadeIn('slow');
    });
  }, 10000);
</script>