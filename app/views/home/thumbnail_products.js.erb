<script type="text/javascript">
  setInterval(function(){
  	
    $.getJSON("http://uploading-test.herokuapp.com/products",function(result){
    	$("#product-thumbnails").html("");
    	var thumbnails = $("<ul class='thumbnails'></ul>");
    	thumbnails.css("display", "none");
      $.each(result, function(i, field){
    		var template = $("#template").clone();
    		template.removeClass("hidden");
      	template.find("#modal-link").attr("href", "#product-" + i);
      	template.find("img#product-img").attr("src", field);
      	template.find(".modal").attr("id", "product-" + i);
      	template.find("#modal-img").attr("src", field);
      	template.attr("id", "");
      	thumbnails.append(template);
      });
      thumbnails.appendTo("#product-thumbnails").fadeIn('slow');
    });
  }, 10000);
</script>