<div class="widget stacked">
  <div class="widget-header">
    <i class="icon-purchase_order"></i>
    <h3>
      <%= link_to "Purchase Orders", purchase_orders_path %> > Purchase Order <%= @purchase_order.id %>
    </h3>
  </div> <!-- /widget-header -->

  <div class="widget-content">
    <table class="table none-border">
      <tbody>
        <tr>
          <td><b>Supervisor</b></td>
          <td><%= @job_site.name %></td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <td><b>Job Site</b></td>
          <td><%= @job_site.name %></td>
          <td><b>Phase</b></td>
          <td><%= @phase.name %></td>
        </tr>
      </tbody>
    </table>
    <hr>

    <div class="widget stacked widget-table">
      <div class="widget-header">
        <h3>Orders</h3>
      </div>
      <div class="widget-content min-height-200">
        <table class="table table-striped table-bordered" id="lot_list">
          <thead>
            <tr>
              <th>#</th>
              <th>Lot</th>
              <th>Product</th>
              <th>Price</th>
              <th>Quantity</th>
            </tr>
          </thead>
          <tbody>
            <% @line_items.each do |line_item, i| %>
              <tr>
                <td><%= line_item.id %></td>
                <td><%= line_item.lot.name unless line_item.lot.nil? %></td>
                <td><%= line_item.product.name unless line_item.product.nil? %></td>
                <td><%= line_item.product.price unless line_item.product.nil? %></td>
                <td><%= line_item.quantity %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= will_paginate @line_items, previous_label: "&laquo;", next_label: "&raquo;" %>
      </div>
    </div>
  </div>
</div>