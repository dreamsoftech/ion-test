<div class="widget stacked">
  <div class="widget-header">
    <i class="icon-purchase_order"></i>
    <h3>Purchase Orders</h3>
  </div> <!-- /widget-header -->
        
  <div class="widget-content">
    <div class="table-responsive">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>Job</th>
            <th>Supervisor</th>
            <th>Notes</th>
            <th>Time</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
        <% @purchase_orders.each do |purchase_order| %>
          <tr>
            <td><%= purchase_order.id %></td>
            <% job_site = purchase_order.phase.job_site %>
            <td><%= job_site.name %></td>
            <td><%= job_site.user.name %></td>
            <td><%= purchase_order.note %></td>
            <td><%= purchase_order.created_at.to_date %></td>
            <td>
              <%= link_to "View", purchase_order_path(purchase_order), :class => 'btn btn-default btn-sm' %>
              <%= link_to("<i class='icon-remove'></i> Delete".html_safe, purchase_order_path(purchase_order), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-default btn-sm') %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>