<div class="form-group">
  <%= f.label :sku, class: "col-sm-3" %>
  <div class="col-sm-6">
    <%= f.input_field :sku, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :name, class: "col-sm-3" %>
  <div class="col-sm-6">
    <%= f.input_field :name, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :price, class: "col-sm-3" %>
  <div class="col-sm-6">
    <%= f.input_field :price, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :photo, class: "col-sm-3" %>
  <div class="col-sm-3">
    <a class="product_photo_link">
      <%= image_tag @product.photo.url(:medium), id: "photo", class: "img-thumbnail" %>
    </a>
    <%= f.file_field :photo, class: "form-control display-none" %>
  </div>
  <div class="col-sm-3">
    <p>Upload the profile photo</p>
  </div>
</div>
<hr>