<div id="add-developer" class="modal fade" role="dialog">
  <%= simple_form_for :developer, url: developers_path, :html => {:method => :post, :class => 'form-horizontal' } do |f| %>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <a class="close" data-dismiss="modal">&#215;</a>
        <h4>Add Developer</h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <%= f.label :name, "Name", class: "col-sm-3" %>
          <div class="col-sm-8">
            <%= f.input_field :name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :contact_name, "Contact Name", class: "col-sm-3" %>
          <div class="col-sm-8">
            <%= f.input_field :contact_name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :contact_email, "Contact Email", class: "col-sm-3" %>
          <div class="col-sm-8">
            <%= f.input_field :contact_email, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :status, "Status", class: "col-sm-3" %>
          <div class="col-sm-8">
            <%= f.input_field :status, collection: ["Active", "Inactive"], class: "form-control" %>
          </div>
        </div>

      </div>
      <div class="modal-footer">
        <%= f.submit "Create", :class => "btn btn-default" %>
        <a class="btn btn-default" data-dismiss="modal" href="#">Cancel</a>
      </div>
    </div>
  </div>
  <% end %>
</div>